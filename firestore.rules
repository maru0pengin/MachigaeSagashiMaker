rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read,write: if true
    }
    match /users/{uid}{
      allow delete: if request.auth !=null
        && request.auth.uid == uid;
    }
    //ユーザー 情報 ドキュメント の パス を 構築 する 関数
